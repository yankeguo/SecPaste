{
    "manifest_version": 3,
    "name": "SecPaste",
    "description": "A secure, alternative text storage, bypassing the system clipboard for enhanced privacy and security",
    "version": "1.1.0",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    }
}